root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
max_line_length = 79
trim_trailing_whitespace = true

[*.md]
indent_size = 1
max_line_length = off

[*.sh]
indent_size = 4

[Makefile]
indent_size = 4
indent_style = tab

[LICENSE]
indent_size = 2

[COMMIT_EDITMSG]
max_line_length = 72
